<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:unifiedMaps="clr-namespace:fivenine.UnifiedMaps;assembly=UnifiedMap"
             x:Class="Sample.MapPage"
                  Title="UnifiedMaps Sample">
    <MasterDetailPage.Master>
        <ContentPage Title="Menu">
            <StackLayout Orientation="Vertical">
                <Button Text="Add Pin"></Button>     
            </StackLayout>
        </ContentPage>
    </MasterDetailPage.Master>
    <MasterDetailPage.Detail>
        <ContentPage Title="Map">
            <StackLayout>
                <unifiedMaps:UnifiedMap 
                    Pins="{Binding Pins}" 
                    PinCalloutTappedCommand="{Binding PinSelectedCommand}"
                    HeightRequest="100"
                    WidthRequest="960"
                    VerticalOptions="FillAndExpand"
                    >
                </unifiedMaps:UnifiedMap>

                <StackLayout 
                    Orientation="Horizontal"
                    HorizontalOptions="CenterAndExpand"
                    Spacing="30">

                    <Button Text="Street" />
                    <Button Text="Satellite" />
                    <Button Text="Hybrid" />

                </StackLayout>
            </StackLayout>
        </ContentPage>
    </MasterDetailPage.Detail>
</MasterDetailPage>